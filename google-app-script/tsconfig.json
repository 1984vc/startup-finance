{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "build",
    "lib": [
      "ESNext"
    ],
    "types": [
      "google-apps-script"
    ]
  },
  "include": [
    "../src/library"
  ],
  "exclude": [
    "../src/library/__tests__"
  ],
  "files": [
    "../src/library/index.ts"
  ]
}